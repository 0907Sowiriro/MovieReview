<% @page_title = "会員一覧" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_admin_users, method: :get, class: "search" %>
    <%= text_field_tag "q", params[:q] %>
    <%= submit_tag "検索" %>
<% end %>

<div class="control"><%= link_to "ユーザーの新規登録", :new_admin_user %></div>

<div class="user-index">
    <% @users.each do |user| %>
        <%= user.user_image %>
        <%= link_to user.name, :admin_user %>
        <%= link_to "編集", [:edit, :admin, user] %>
        <%= link_to "削除", [:admin, user], method: :delete, data: {confirm: "本当に削除しますか？"} %>
    <% end %>
</div>